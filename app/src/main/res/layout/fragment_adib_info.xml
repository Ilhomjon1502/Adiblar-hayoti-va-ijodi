<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kulrang"
    app:layoutDescription="@xml/fragment_adib_info_scene"
    tools:context=".AdibInfoFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_back"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="35dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute"
        android:layout_marginStart="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/back_img" />

    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/card2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_saqlangan_1"
        app:layout_constraintRight_toLeftOf="@id/card3"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="35dp"
        android:backgroundTint="@color/white"
        app:cardElevation="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/kulrang"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute">

        <SearchView
            android:id="@+id/search_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_name_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="O'tkir Hoshimov"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/card_back"
        tools:layout_editor_absoluteX="76dp" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@id/txt_name_info"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="false">

            <LinearLayout
                android:id="@+id/linrrr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/kulrang"
                android:clickable="false"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_yil_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="false"
                    android:text="1923-2019"
                    android:textSize="20sp" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="false"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2.5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_info"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:clickable="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/adib_img" />

                        <com.athkalia.emphasis.EmphasisTextView
                            android:id="@+id/txt_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:clickable="false"
                            android:text="Adib Haqida malumot\n\n\nAdib Haqida malumot\n\n\nAdib Haqida malumot\n\n\nAdib Haqida malumot\n\n\nAdib Haqida malumot\n\n\nAdib Haqida malumot\n\n\nAdib Haqida malumot\n\n\nAdib Haqida malumot\n\n\nAdib Haqida malumot\n\n\n"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.motion.widget.MotionLayout>